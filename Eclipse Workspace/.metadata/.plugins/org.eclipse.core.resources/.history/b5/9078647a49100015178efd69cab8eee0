
public class Simulator {
	
	public static void main(String[] args){
		PID pid = new PID(5.0, 1, 0, 0);
		double time = 0.0;
		
		
		double value = 0.0;
		double changeRate = 0.0;
		while(time++ < 500){
			System.out.println("Time: " + time + "\tValue: " + value);
			if(time % 5 == 0){
				State state = new State(value, time);
				double pidOutput = pid.process(state);
				changeRate = pidOutput;
				System.out.println("Correction System has run.\nNew correction rate is: " + changeRate);
			}
			
			value += changeRate;
			int temp = (int) Math.round(time*10);
			time = temp/10.0;
		}
	}

}
